<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.hit_product.ui.fragment.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/zoom_in"
            app:exitAnim="@anim/zoom_out"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/zoom_in"
            app:exitAnim="@anim/zoom_out"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.hit_product.ui.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgetFragment"
            app:destination="@id/forgetFragment"
            app:enterAnim="@anim/zoom_in"
            app:exitAnim="@anim/zoom_out"/>
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/zoom_in"
            app:exitAnim="@anim/zoom_out"/>
    </fragment>
    <fragment
        android:id="@+id/forgetFragment"
        android:name="com.example.hit_product.ui.fragment.ForgetFragment"
        android:label="ForgetFragment" >
        <action
            android:id="@+id/action_forgetFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.hit_product.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_timetableFragment"
            app:enterAnim="@anim/zoom_in"
            app:destination="@id/timetableFragment" />
        <action
            android:id="@+id/action_homeFragment_to_informationFragment"
            app:destination="@id/informationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_classRegistrationFragment"
            app:destination="@id/classRegistrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/timetableFragment"
        android:name="com.example.hit_product.ui.fragment.TimetableFragment"
        android:label="TimetableFragment" >
        <action
            android:id="@+id/action_timetableFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/informationFragment"
        android:name="com.example.hit_product.ui.fragment.UserInformationFragment"
        android:label="fragment_information"
        tools:layout="@layout/fragment_information" />
    <fragment
        android:id="@+id/classInformationFragment"
        android:name="com.example.hit_product.ui.fragment.ClassDetailsFragment"
        android:label="fragment_class_information"
        tools:layout="@layout/fragment_class_details" />
    <fragment
        android:id="@+id/classRegisteredFragment"
        android:name="com.example.hit_product.ui.fragment.CourseRegisteredFragment"
        android:label="fragment_class_registered"
        tools:layout="@layout/fragment_class_registered" />
    <fragment
        android:id="@+id/classRegistrationFragment"
        android:name="com.example.hit_product.ui.fragment.ClassRegistrationFragment"
        android:label="fragment_class_registration"
        tools:layout="@layout/fragment_class_registration" >
        <action
            android:id="@+id/action_classRegistrationFragment_to_classInformationFragment"
            app:destination="@id/classInformationFragment" />
        <action
            android:id="@+id/action_classRegistrationFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/zoom_in"
            app:exitAnim="@anim/zoom_out"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/listClassFragment"
        android:name="com.example.hit_product.ui.fragment.ListCourseFragment"
        android:label="fragment_list_class"
        tools:layout="@layout/fragment_list_class" />
</navigation>